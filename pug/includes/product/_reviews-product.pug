    article.reviews-product__review.item-review
      .item-review__comment
        //- Header
        header.item-review__header
          h3.item-review__title Іван Стедниця
          time.item-review__time(datetime="2022-01-25") 25.01.2022
          ul.item-review__stars.stars(aria-hidden="true")
            li.stars__item
              svg.icon
                use(xlink:href="img/icons/symbol-defs.svg#icon-star")
            li.stars__item
              svg.icon
                use(xlink:href="img/icons/symbol-defs.svg#icon-star")
